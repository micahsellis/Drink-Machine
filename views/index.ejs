<%- include('partials/header') %> 
<div class="block">
  <div class="card">
    <div class="card-content">
        <ul>
          <h3 class="title"><a href="/drinks/details/<%=newDrink.idDrink%>"><%= newDrink.strDrink %></a></h3>
        <% dArr = Object.values(newDrink) %>
        <img src="<%=newDrink.strDrinkThumb%>" alt="<%=newDrink.strDrink%>" width="150px">
        <p><%= newDrink.strInstructions.substr(0,40) %> ...</p>
                <h5>Ingredients:</h5>
                <table>
                  <% if (newDrink.ingredient1) { %>
                  <tr>
                    <td><%=newDrink.ingredient1%></td>
                    <td><%=newDrink.measure1%></td>
                  </tr>
                  <% } %>
                  <% if (newDrink.ingredient2) { %>
                  <tr>
                    <td><%=newDrink.ingredient2%></td>
                    <td><%=newDrink.measure2%></td>
                  </tr>
                  <% } %>
                  <% if (newDrink.ingredient3) { %>
                  <tr>
                    <td><%=newDrink.ingredient3%></td>
                    <td><%=newDrink.measure3%></td>
                  </tr>
                  <% } %>
                  <% if (newDrink.ingredient4) { %>
                  <tr>
                    <td><%=newDrink.ingredient4%></td>
                    <td><%=newDrink.measure4%></td>
                  </tr>
                  <% } %>
                  <% if (newDrink.ingredient5) { %>
                  <tr>
                    <td>click for more...</td>
                    <td></td>
                  </tr>
                  <% } %>
                </table>
      </ul>
    </div>
  </div>
</div>
<% myDrinks.forEach(md => { %>
  <div class="block">
    <div class="card">
      <div class="card-content">
        <ul>
          <h3 class="title"><a href="/drinks/details/<%=md._id%>"><%= md.name %></a></h3>
          <form action="/drinks/delete/<%=md.id%>?_method=DELETE" method="POST"><button type="submit">X</button></form>
          <h4 class="subtitle"><%= md.category %></h4>
                <% if (md.drinkImg) { %>
                <img src="<%= md.drinkImg %>" alt="<%= md.name %> Image" width="150px">
                <% } %>
          <p><%= md.instructions.substr(0,40) %> ...</p>
            <h5>Ingredients:</h5>
                <table>
                  <% if (md.ingredient1) { %>
                  <tr>
                    <td><%=md.ingredient1%></td>
                    <td><%=md.measure1%></td>
                  </tr>
                  <% } %>
                  <% if (md.ingredient2) { %>
                  <tr>
                    <td><%=md.ingredient2%></td>
                    <td><%=md.measure2%></td>
                  </tr>
                  <% } %>
                  <% if (md.ingredient3) { %>
                  <tr>
                    <td><%=md.ingredient3%></td>
                    <td><%=md.measure3%></td>
                  </tr>
                  <% } %>
                  <% if (md.ingredient4) { %>
                  <tr>
                    <td><%=md.ingredient4%></td>
                    <td><%=md.measure4%></td>
                  </tr>
                  <% } %>
                  <% if (md.ingredient5) { %>
                  <tr>
                    <td>click for more...</td>
                    <td></td>
                  </tr>
                  <% } %>
                </table>
          </ul>
        <% }); %>
      </div>
    </div>
  </div>
</body>
</html>
